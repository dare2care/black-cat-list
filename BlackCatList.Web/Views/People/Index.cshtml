@model IEnumerable<BlackCatList.Web.Models.People.PersonViewModel>

@{
    ViewBag.Title = "Index";
}

@section Styles {
    <link rel="stylesheet" href="~/Content/datatables.css" />
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        Create New
    </a>
</p>

<table class="table table-hover dt-head-centered responsive nowrap initializing">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedBy)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>
                    <div>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-default">Edit</a>
                    </div>
                    <div>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-default">Details</a>
                    </div>
                    <div>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-default">Delete</a>
                    </div>
                </td>
                <td>
                    @if (item.ImageId.HasValue)
                    {
                        <a href="@Url.Action("Delete", "Images", new { id = item.ImageId })" title="Delete Image" onclick="return confirm('Confirm photo delete?')">
                            @Html.Partial("_Image", item)
                        </a>
                    }
                    else
                    {
                        @Html.Partial("_Image", item)
                    }
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    <a href="mailto:@item.Email" title="Send Email">
                        @item.Email
                    </a>
                </td>
                <td>
                    <a href="tel:@item.Phone" title="Call">
                        @item.Phone
                    </a>
                </td>
                <td>
                    @item.Age
                </td>
                <td>
                    @item.Country
                </td>
                <td>
                    @item.City
                </td>
                <td>
                    @item.Street
                </td>
                <td title="@item.Comment">
                    <div class="keep-line-breaks">@item.Comment</div>
                </td>
                <td>
                    @item.CreatedOn
                </td>
                <td>
                    @item.CreatedBy
                </td>
                <td>
                    @item.ModifiedOn
                </td>
                <td>
                    @item.ModifiedBy
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/Scripts/datatables.bundle.js"></script>
}