@model IImageViewModel

@if (Model != null && Model.ImageId.HasValue)
{
    <img src="@Url.Action("Index", "Images", new { id = Model.ImageId })" class="img-responsive img-boxed" alt="Image for @Model.Name" />
}
else
{
    <img src="~/Content/image-not-found.png" class="img-responsive img-boxed" alt="Image not found" />
}